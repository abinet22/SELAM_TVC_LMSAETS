  <body class="sidebar-mini sidebar-closed sidebar-collapse" style="height: auto;">
  <div class="wrapper">
    <!-- Navbar -->
    <%- include('./partials/top') %>
    <!-- /.navbar -->
  
    <!-- Main Sidebar Container -->
    <aside class="main-sidebar  elevation-4">
      <!-- Brand Logo -->
      <%- include('./partials/sidebar') %>
      <!-- /.sidebar -->
    </aside>
  
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper" style="min-height: 2128.12px;">
      <!-- Content Header (Page header) -->
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0">Dashboard</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active">Add User Credential</li>
              </ol>
            </div><!-- /.col -->
          </div><!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>
      <!-- /.content-header -->
  
      <!-- Main content -->
      <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 offset-md-2 grid-margin stretch-card">
                  <div class="card card-primary">
                      <div class="card-header">
                        <h4 class="card-title">Add New System User</h4>
                      </div>
                    <div class="card-body">
                   
                      <%- include ('./partials/messages') %>
                      <form class="forms-sample" action="/admin/addnewsystemuser" method="post">
                      <div class="row">
                        <div class="col-md-4">
                          <div class="form-group">
                            <label for="exampleInputUsername1">Please Select User Roll</label>
                            <select class="form-control" name="userroll" id="userroll" onchange="onuserrollchange(this);">
                                <option value="0">Select System User Roll </option>
                                <option >Admin</option>
                                <option >Department_Head</option>
                                <option >College_Dean</option>
                                <option >Project_Coordinator</option>
                                <option>Registrar</option>
                                <option>JBS</option>
                            </select>
                          </div>
                          <div class="form-group" id="dpt" style="display: none;">
                            <label for="exampleInputUsername1">Please Select Department Name</label>
                            <select  class="form-control-sm js-example-basic-single " style="width:100%" name="deptname" id="deptname">
                              <option value="0">Select Department Name </option>
                             
                               
                              <% if(deptlist.length > 0) {%>
                                <%deptlist.forEach( function (row){ %>
                                  <option value="<%= row.department_id %>"><%= row.department_name %></option>
                             
                               
                               <% })}else{ %>

                               <% } %>
                              
                                </select>
                          </div>
                        
                          <div class="form-group" id="staff" style="display: none;">
                            <label for="exampleInputUsername1">Please Select Staff Member</label>
                            <select class="form-control-sm js-example-basic-single " name="staffmember" id="staffmember" style="width:100%">
                                <option value="0">Select System Staff Member </option>
                                <% if(stafflist.length > 0) {%>
                                  <% stafflist.forEach( function (row){ %>
                                    <option value="<%= row.staff_id %>"><%= row.staff_f_name %> &nbsp; <%= row.staff_m_name %> &nbsp; <%= row.staff_l_name %></option>
                               
                                 
                                 <% })}else{ %>

                                 <% } %>
                                </select>
                          </div>
                       
                          <script>
                            function onuserrollchange (userroll){
                             var usrroll = userroll.value;
                             if(usrroll =="Department_Head")
                             {
                              document.getElementById('staff').style.display="block";
                             
                             document.getElementById('dpt').style.display="block";
                             }
                           
                             else 
                             {
                              document.getElementById('staff').style.display="block";
                              document.getElementById('dpt').style.display="none";
                             }

                            }
                          </script>
                        </div>
                        <div class="col-md-8">
                          <div class="form-group">
                            <label for="exampleInputUsername1">Username</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Username">
                          </div>
                        
                          <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                          </div>
                          <div class="form-group">
                            <label for="exampleInputConfirmPassword1">Confirm Password</label>
                            <input type="password" class="form-control" id="repassword" name="repassword" placeholder="Retype-Password">
                          </div>
                        
                         <div class="col-md-6 offset-md-3">
                          <button type="submit" class="btn btn-primary btn-block me-2">Submit</button>
                         
                         </div>
                        </div>
                      </div>
                      </form>
                    </div>
                  </div>
                </div>
             
            
              </div>
           
          <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- /.content -->
